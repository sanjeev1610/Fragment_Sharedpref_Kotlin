<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_email"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editText_email_reg"
    />
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_pwd" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editText_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/editText_pwd" android:textSize="18sp"
            app:layout_constraintVertical_bias="0.476"/>
    <EditText
            android:padding="4dp"
            android:background="@drawable/edittext_border_baground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_email" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_email" android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"/>
    <EditText
            android:padding="4dp"
            android:background="@drawable/edittext_border_baground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_pwd"
            app:layout_constraintEnd_toEndOf="@+id/editText_email"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_email"
            app:layout_constraintStart_toStartOf="@+id/editText_email"/>
    <Button
            android:background="@drawable/button_border_baground"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_login" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toStartOf="@+id/button_register"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_register"
            app:layout_constraintBottom_toBottomOf="@+id/button_register"/>
    <Button
            android:background="@drawable/button_border_baground"
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_register" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_pwd" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp"
    />
</android.support.constraint.ConstraintLayout>